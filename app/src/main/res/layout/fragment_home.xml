<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:id="@+id/watchVideosLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/defult_dp_img"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="4dp"
                        app:civ_shadow_radius="10dp"
                        app:civ_shadow_color="#3f51b5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <TextView
                        android:id="@+id/hello"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:scrollHorizontally="true"
                        android:text="Hello , "
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Atique Hossain"
                        android:textColor="@color/md_grey_800"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"

                    >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/notification"
                        app:civ_border_color="#3f51b5"
                        app:civ_border_width="4dp"
                        app:civ_shadow_radius="10dp"
                        app:civ_shadow_color="#3f51b5"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/md_white_1000"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="10dp"
                        android:elevation="5dp"
                        android:layout_margin="8dp"
                        android:translationZ="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="2.5"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textSize="12sp"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:layout_centerInParent="true"
                                    android:paddingTop="30dp"
                                    android:textColor="@color/md_blue_800"/>

                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/percentage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="16dp"
                                    app:dotColor="@color/md_blue_800"
                                    app:dotWidth="8dp"
                                    app:drawDot="true"
                                    app:progressBackgroundColor="@color/md_blue_100"
                                    app:progressColor="@color/md_blue_500"
                                    app:progressStrokeWidth="8dp"
                                    app:textColor="@color/md_blue_800"
                                    app:textSize="18sp" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"

                                android:layout_weight="5.5"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Monthly State"
                                        android:textColor="@color/md_grey_800"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" : "
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="100"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text=" % "
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="Remaining Balance"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="00"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text="Spend Money"
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text=" 00 "
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:textColor="@color/md_grey_800"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/md_white_1000"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_margin="8dp"
                android:translationZ="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Balance"
                                android:textColor="@color/md_grey_600"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0000"
                                android:textStyle="bold"
                                android:textColor="@color/md_grey_800"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text=".00 "
                                android:textStyle="bold"
                                android:textColor="@color/md_grey_800"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_add"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/add_btn"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:text="Add"
                                    android:textColor="@color/md_grey_600"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_baseline_pay_add_24"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/expend"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Pay"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:clickable="true">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_history"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/loHistory"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="History"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="16dp"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_todo"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/Mtodo"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Todo"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_account_balance_wallet"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/Maccount"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Account"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_baseline_send_24"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/Msend"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Send"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="16dp"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:padding="2dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_analysis"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/MAnalysis"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Analysis "
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_baseline_picture_as_pdf_24"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/Mpdf"
                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Pdf"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="0dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                                    android:layout_width="48dp"
                                    android:layout_height="60dp"
                                    app:cornerRadius="30dp"
                                    app:icon="@drawable/ic_baseline_restart_alt_24"
                                    app:iconTint="@color/pss_base_black_tint"
                                    app:backgroundTint="@color/md_grey_200"
                                    android:id="@+id/Mreset"

                                    />

                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:text="Reset"
                                    android:textColor="@color/md_grey_800"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:elevation="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:translationZ="4dp"
                        app:cardBackgroundColor="@color/md_grey_200"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.5"
                                android:gravity="center">


                                <AnalogClock
                                    android:id="@+id/simpleAnalogClock"
                                    android:layout_width="40dp"
